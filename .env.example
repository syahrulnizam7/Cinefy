# Nama aplikasi
APP_NAME=Cinefy

# Lingkungan aplikasi (production, staging, local, dll.)
APP_ENV=local

# Kunci enkripsi aplikasi (gunakan 'php artisan key:generate' untuk mengisi)
APP_KEY=

# Mode debug (true untuk debugging, false untuk produksi)
APP_DEBUG=true

# Zona waktu aplikasi
APP_TIMEZONE=UTC

# URL utama aplikasi
APP_URL=http://localhost

# Pengaturan bahasa
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Driver maintenance mode
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# Jumlah worker PHP untuk built-in server
PHP_CLI_SERVER_WORKERS=4

# Pengaturan keamanan hashing
BCRYPT_ROUNDS=12

# Konfigurasi logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Konfigurasi database
DB_CONNECTION=mysql
DB_HOST=your-database-host.com # Contoh: mysql.example.com
DB_PORT=3306
DB_DATABASE=your_database_name
DB_USERNAME=your_database_user
DB_PASSWORD=your_database_password

# API Key untuk TMDB (The Movie Database)
TMDB_API_KEY=your_tmdb_api_key

# Konfigurasi Google OAuth (untuk login dengan Google)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://127.0.0.1:8000/login/google/callback

# Konfigurasi Cloudinary (untuk penyimpanan gambar)
CLOUDINARY_URL="cloudinary://your_api_key:your_api_secret@your_cloud_name"
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_SECURE_URL=true

# Konfigurasi sesi
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Pengaturan broadcast & antrian
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Konfigurasi cache
CACHE_STORE=database
CACHE_PREFIX=

# Konfigurasi Memcached
MEMCACHED_HOST=127.0.0.1

# Konfigurasi Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Konfigurasi email
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io # Contoh: smtp.gmail.com
MAIL_PORT=2525
MAIL_USERNAME=your_mail_username
MAIL_PASSWORD=your_mail_password
MAIL_FROM_ADDRESS="noreply@cinefy.com"
MAIL_FROM_NAME="${APP_NAME}"

# Konfigurasi AWS (untuk penyimpanan S3, jika digunakan)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Nama aplikasi di Vite (untuk frontend)
VITE_APP_NAME="${APP_NAME}"
